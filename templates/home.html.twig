{% extends 'base.html.twig' %}

{% block body %}

<div style="padding-top:16px;">
	<div class="container">
	{% for user in users %}
		<div class="row">
			<div class="offset-2 col-7">
				<h1 style="text-align: center;">{{ user.metier }}</h1>
				<h4 style="text-align: center;">{{ user.techo }}</h4>
				<p style="text-align: center;">{{ user.content }}</p>
				<h4 class="offset-4">{{ user.nom }} {{ user.prenom }}  {{ user.age }} ans</h4>
				<p><i class="fas fa-home offset-1"></i> {{ user.ville }} <i class="fas fa-envelope-open-text"></i> {{ user.email }} <i class="fas fa-phone"></i> {{ user.phone }}</p>
			</div>
			<div class="col-3">
				<a href="{{ path('app_login')}}"><img src="{{ user.photo }}" style=" height: 14em; padding: 1em;"></a>
			</div>
		</div>
	{% endfor %}
	<hr>
	</div>

	<div class="container">
		<h4>FORMATION</h4>
		{% for parcour in parcours %}
			{% if loop.index < 3 %}
			<h5 class="offset-4">{{ parcour.nom }}</h5>
			<p class="offset-4">Du {{ parcour.dateStart }} au {{ parcour.dateEnd }} {{ parcour.lieu }}</p>
		{% endif %}
		{% endfor %}
		<hr>
	</div>


	<div class="container">
	<h4>PROJET WEB</h4>
		<div class="row">
		{% for projet in projets %}
			<div class="col-4">
				<h5 class="mt-5">{{ projet.nom }}</h5>
				<img data-toggle="modal" data-target="#exampleModal1{{ projet.id }}" src="{{ projet.photo }}" style=" height: 23em; width: 16em;">
			</div>
	<!-- Modal -->
	<div class="modal fade col-12" id="exampleModal1{{ projet.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
			<p style="text-align: center;">{{ projet.description }}</p>
			<p style="text-align: center;">{{ projet.techno }}</p>
			{% if projet.lien %}
			<a style="text-align: center;" href="{{ projet.lien }}">Voir le site</a>
			{% endif %}
			{% if projet.photo %}
	        <img src="{{ projet.photo }}" style=" height: 38em;">
	        {% endif %}
	        {% if projet.photo2 %}
	        <img class="pt-3 pb-3" src="{{ projet.photo2 }}" style=" height: 33em;">
	        {% endif %}
	        {% if projet.photo3 %}
	        <img src="{{ projet.photo3 }}" style=" height: 33em;">
	        {% endif %}
	      </div>
	    </div>
	  </div>

		{% endfor %}
		</div>
	</div>	
{% endblock %}
