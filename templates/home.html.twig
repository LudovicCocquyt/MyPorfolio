{% extends 'base.html.twig' %}

{% block body %}

<div class="hero">
	<div class="container">
	{% for user in users %}
		<div class="row">
			<div class="offset-md-2 col-md-7 col-lg-8">
				<h1 class="textFormat">{{ user.metier }}</h1>
				<h4 class="textFormat bold">{{ user.techo }}</h4>
				<p class="textFormat bold">{{ user.content }}</p>
				<h4 class="offset-1 offset-md-2 offset-lg-4 bold">{{ user.nom }} {{ user.prenom }}  {{ user.age }} ans</h4>
				<div class="row">
					<p class="offset-3 offset-md-4 offset-lg-0 bold"><i class="fas fa-home"></i> {{ user.ville }}</p>
					<p class="offset-3 offset-md-4 offset-lg-1 bold"> <i class="fas fa-envelope-open-text "></i> {{ user.email }}</p>
					<p class="offset-3 offset-md-4 offset-lg-1 bold"><i class="fas fa-phone"></i> {{ user.phone }}</p>
				</div>
			</div>
			<div class="col-md-3 col-lg-2">
				<a class="offset-3 offset-md-0" href="{{ path('app_login')}}"><img class="photo" src="{{ user.photo }}"></a>
			</div>
		</div>
	{% endfor %}
	<hr>
	</div>

	<div class="container">
		<h3>FORMATION</h3>
		{% for parcour in parcours %}
			{% if loop.index < 3 %}
			<h5 class="bold offset-4">{{ parcour.nom }}</h5>
			<p class="offset-4">Du {{ parcour.dateStart }} au {{ parcour.dateEnd }} {{ parcour.lieu }}</p>
		{% endif %}
		{% endfor %}
		<hr>
	</div>


	<div class="container">
	<h3>PROJET WEB</h3>
		<div class="row">
		{% for projet in projets %}
			<div class="col-12 col-md-5 col-lg-4 col-xl-3 offset-1 offset-lg-0">
				<h5 class="bold mt-5">{{ projet.nom }}</h5>
				<img class="card" data-toggle="modal" data-target="#exampleModal1{{ projet.id }}" src="{{ projet.photo }}">
			</div>

			<!-- Modal -->
			<div class="modal fade col-12" id="exampleModal1{{ projet.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
			  <div class="modal-dialog" role="document">
			    <div class="modal-content">
			    	<div class="card-header">
						<p class="bold textFormat">{{ projet.description }}</p>
		  			</div>
		  			<div class="card-body">
						<p class="textFormat">{{ projet.techno }}</p>
				    </div>
						{% if projet.lien %}
						<a class="textFormat" href="{{ projet.lien }}">Voir le site</a>
						{% endif %}
						{% if projet.photo %}
				        <img src="{{ projet.photo }}" class="modalCard">
				        {% endif %}
				        {% if projet.photo2 %}
				        <img class="pt-3 pb-3" src="{{ projet.photo2 }}" style=" height: 33em;">
				        {% endif %}
				        {% if projet.photo3 %}
				        <img src="{{ projet.photo3 }}" style=" height: 33em;">
				        {% endif %}
			      </div>
			    </div>
			</div>
		{% endfor %}
		</div>
	</div>
</div>

{% endblock %}
