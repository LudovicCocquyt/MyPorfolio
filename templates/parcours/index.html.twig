{% extends 'base.html.twig' %}

{% block title %}Parcours index{% endblock %}

{% block body %}
    <h1>Parcours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Poste</th>
                <th>Lieu</th>
                <th>DateStart</th>
                <th>DateEnd</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for parcour in parcours %}
            <tr>
                <td>{{ parcour.id }}</td>
                <td>{{ parcour.nom }}</td>
                <td>{{ parcour.poste }}</td>
                <td>{{ parcour.lieu }}</td>
                <td>{{ parcour.dateStart }}</td>
                <td>{{ parcour.dateEnd }}</td>
                <td>{{ parcour.description }}</td>
                <td>
                    <a href="{{ path('parcours_show', {'id': parcour.id}) }}">show</a>
                    <a href="{{ path('parcours_edit', {'id': parcour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('parcours_new') }}">Create new</a>
{% endblock %}
